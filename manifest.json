{
    "manifest_version": 3,
    "name": "Geely VDI 登录助手",
    "version": "1.0.5",
    "description": "自动填写 Geely VDI 一次性验证码",
    "content_scripts": [
        {
            "matches": [
                "https://vdi.geely.com/*",
                "https://cdvdi.geely.com/*"
            ],
            "js": [
                "js/content.user.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_title": "Geely VDI 登录助手\n点击重新输入密钥"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": [
        "storage",
        "scripting"
    ]
}
